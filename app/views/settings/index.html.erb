<h2>クレジットカードを登録する</h2>
<%= form_for settings_path, method: 'post', html: {id: 'nonce-form'} do |f| %>
  <div class="form-group">
    <label for="inputCardNumber">カード番号</label>
    <div id="sq-card-number"></div>
  </div>
  <div class="form-group">
    <label for="inputCVV">CVV/セキュリティコード</label>
    <div id="sq-cvv"></div>
  </div>
  <div class="form-group">
    <label for="inputExpirationDate">有効期限</label>
    <div id="sq-expiration-date"></div>
  </div>
  <div class="form-group">
    <label for="inputPostalCode">郵便番号</label>
    <div id="sq-postal-code"></div>
  </div>
  <button id="sq-creditcard" class="button-credit-card btn btn-default">
    カードを登録する
  </button>
  <input type="hidden" id="card_brand" name="card_brand">
  <input type="hidden" id="exp_month" name="exp_month">
  <input type="hidden" id="exp_year" name="exp_year">
  <input type="hidden" id="last_4" name="last_4">
  <input type="hidden" id="card-nonce" name="nonce">
<% end %>

<h2>登録済みカード</h2>
<table class="table table-striped">
  <thead>
    <tr>
      <td>ブランド</td>
      <td>有効期限</td>
      <td>下4桁</td>
    </tr>
  </thead>
<% @cards.each do |card|%>
  <tr>
    <td><%= card.brand %></td>
    <td><%= card.exp_year %>年<%= card.exp_month %>月</td>
    <td><%= card.last4 %></td>
    <td><%= link_to "削除", setting_path(card.id), method: :delete %></td>
  </tr>
<% end %>
</table>
